<h1>Yeni Proje Ekle</h1>

<%= form_with model: @project, url: advisor_projects_path, local: true do |f| %>
  <div>
    <%= f.label :title, "Proje Başlığı" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "Proje Açıklaması" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :quota, "Kontenjan (Kaç grup başvurabilir?)" %><br>
    <%= f.number_field :quota, min: 1 %>
  </div>

  <div>
    <%= f.label :published, "Yayınla" %>
    <%= f.check_box :published %>
  </div>

  <div>
    <%= f.submit "Projeyi Ekle" %>
  </div>
<% end %>
